# Database connection (PostgreSQL via Neon or any Postgres provider)
# Required for database features. App works with in-memory storage without this.
DATABASE_URL=postgresql://user:password@host:5432/database

# Server port (defaults to 5000 if not set)
PORT=5000

# Node environment (development or production)
NODE_ENV=development

# Firebase Configuration (REQUIRED for the app to work)
# Get these from your Firebase project settings:
# https://console.firebase.google.com/ > Project Settings > General > Your apps > Web app
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_APP_ID=your-firebase-app-id
